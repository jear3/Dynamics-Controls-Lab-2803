function [Section10_SlopeAngle, Section10_Velocity, Section15_TransitionRadius, Section15_TransitionArcLength, ...
    Section17_Velocity, Section20_LoopRadius, Section20_LoopArcLength, Section23_Velocity, ...
    Section25_TransitionRadius, Section25_TransitionArcLength, Section30_Velocity, ...
    Section35_TransitionRadius, Section35_TransitionArcLength, Section35_Velocity, ...
    Section45_TransitionRadius, Section45_Arclength, Section50_SlopeAngle] = Resize_variables(x, ...
    Section10_SlopeAngle, Section10_Velocity, Section15_TransitionRadius, Section15_TransitionArcLength, ...
    Section17_Velocity, Section20_LoopRadius, Section20_LoopArcLength, Section23_Velocity, ...
    Section25_TransitionRadius, Section25_TransitionArcLength, Section30_Velocity, ...
    Section35_TransitionRadius, Section35_TransitionArcLength, Section35_Velocity, ...
    Section45_TransitionRadius, Section45_Arclength, Section50_SlopeAngle)

    % Expand scalars to match size of x
    Section10_SlopeAngle = Section10_SlopeAngle * ones(size(x));
    Section10_Velocity = Section10_Velocity * ones(size(x));
    Section15_TransitionRadius = Section15_TransitionRadius * ones(size(x));
    Section17_Velocity = Section17_Velocity * ones(size(x));
    Section20_LoopRadius = Section20_LoopRadius * ones(size(x));
    Section23_Velocity = Section23_Velocity * ones(size(x));
    Section25_TransitionRadius = Section25_TransitionRadius * ones(size(x));
    Section30_Velocity = Section30_Velocity * ones(size(x));
    Section35_TransitionRadius = Section35_TransitionRadius * ones(size(x));
    Section35_Velocity = Section35_Velocity * ones(size(x));
    Section45_TransitionRadius = Section45_TransitionRadius * ones(size(x));
    Section50_SlopeAngle = Section50_SlopeAngle * ones(size(x));

    % Interpolate vectors to match size of x
    Section15_TransitionArcLength = interp1(linspace(0,1,length(Section15_TransitionArcLength)), ...
        Section15_TransitionArcLength, linspace(0,1,length(x)), 'linear', 'extrap');
    
    Section20_LoopArcLength = interp1(linspace(0,1,length(Section20_LoopArcLength)), ...
        Section20_LoopArcLength, linspace(0,1,length(x)), 'linear', 'extrap');
    
    Section25_TransitionArcLength = interp1(linspace(0,1,length(Section25_TransitionArcLength)), ...
        Section25_TransitionArcLength, linspace(0,1,length(x)), 'linear', 'extrap');
    
    Section35_TransitionArcLength = interp1(linspace(0,1,length(Section35_TransitionArcLength)), ...
        Section35_TransitionArcLength, linspace(0,1,length(x)), 'linear', 'extrap');
    
    Section45_Arclength = interp1(linspace(0,1,length(Section45_Arclength)), ...
        Section45_Arclength, linspace(0,1,length(x)), 'linear', 'extrap');

end
